---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  url?: string;
}

import { SITE } from "../lib/site";

const {
  title,
  description = "A delightful build tool for CoffeeScript. Simple, fast, and creamy smooth.",
  image = SITE.image,
  url = SITE.url,
} = Astro.props;

const currentYear = new Date().getFullYear();
const startYear = 2025;

const yearRange =
  startYear === currentYear ? startYear : `${startYear} - ${currentYear}`;

const pageTitle = `${title} | Milkee`;
const pageUrl = `${url}${Astro.url.pathname === "/" ? "" : Astro.url.pathname}`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / OGP -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:site_name" content="Milkee" />
    <meta property="og:locale" content="ja_JP" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <link rel="icon" type="image/png" href="/img/milkee-logo.png" />
    <link rel="canonical" href={pageUrl} />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body>
    <header
      style="
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 50;
      background-color: var(--color-coffee-dark);
      color: var(--color-milk);
      padding: 0.75rem 1rem;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    "
    >
      <div
        style="
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        padding: 0 1rem;
      "
      >
        <div
          style="
          font-weight: 700;
          font-size: 1.25rem;
          letter-spacing: 0.05em;
        "
        >
          <a href="/">Milkee</a>
        </div>
        <nav
          style="
          display: flex;
          gap: 0.75rem;
          font-weight: 500;
          font-size: 0.875rem;
        "
        >
          <a href="/docs" class="hover:text-milk-dark">Docs</a>
          <a href="/plugins" class="hover:text-milk-dark">Plugins</a>
          <a
            href="https://www.npmjs.com/package/milkee"
            target="_blank"
            rel="noreferrer"
            class="hover:text-milk-dark">npm</a
          >
          <a
            href="https://github.com/otoneko1102/coffeescript-milkee"
            target="_blank"
            rel="noreferrer"
            class="hover:text-milk-dark">GitHub</a
          >
        </nav>
      </div>
    </header>

    <div style="min-height: 100vh; padding-top: 70px;">
      <slot />
    </div>

    <footer
      style="
      background-color: var(--color-milk-cream);
      color: var(--color-coffee-light);
      padding: 2rem;
      text-align: center;
      margin-top: 3rem;
      border-top: 1px solid var(--color-milk-dark);
    "
    >
      <p>
        &copy; {yearRange} Milkee Project by otoneko.
      </p>
    </footer>

    <style>
      a {
        color: inherit;
        text-decoration: none;
        transition: color 0.2s ease;
      }

      @media (min-width: 768px) {
        header > div {
          padding: 0 2rem !important;
        }

        header nav {
          gap: 1.5rem !important;
          font-size: 1rem !important;
        }

        header > div > div {
          font-size: 1.5rem !important;
        }
      }
    </style>
  </body>
</html>
