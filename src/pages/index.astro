---
import Layout from '../layouts/Layout.astro';
import InstallBox from '../components/InstallBox.astro';
import StatsCard from '../components/StatsCard.astro';

async function getMilkeeStats() {
  try {
    const [registryRes, downloadsRes] = await Promise.all([
      fetch("https://registry.npmjs.org/milkee"), 
      fetch("https://api.npmjs.org/downloads/point/last-month/milkee"),
    ]);

    if (!registryRes.ok || !downloadsRes.ok) throw new Error("Failed to fetch");

    const registry = await registryRes.json();
    const downloads = await downloadsRes.json();

    return {
      version: registry["dist-tags"].latest,
      lastUpdated: new Date(registry.time.modified).toLocaleDateString("ja-JP"),
      downloads: downloads.downloads.toLocaleString(),
    };
  } catch (error) {
    console.error(error);
    return { version: "0.0.1", lastUpdated: "-", downloads: "0" };
  }
}

const stats = await getMilkeeStats();
