---
import Layout from "../layouts/Layout.astro";
import InstallBox from "../components/InstallBox.svelte";
import MilkeeStats from "../components/MilkeeStats.svelte";

// Runtime-only fetching: remove build-time network request so values are not baked into the build.
// The client script will fetch and populate the actual values when the page loads.

const stats = { version: "-", lastUpdated: "-", downloads: "-" };
---

<Layout title="Home">
  <main
    style="
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    text-align: center;
    min-height: 100vh;
  "
  >
    <a
      href="https://www.npmjs.com/package/milkee"
      target="_blank"
      rel="noreferrer"
      style="
        margin-bottom: 2.5rem;
        padding: 0.75rem;
        background-color: var(--color-milk-cream);
        border-radius: 1.5rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        display: inline-block;
        transition: transform 0.3s ease;
      "
      onmouseover="this.style.transform='scale(1.02)'"
      onmouseout="this.style.transform='scale(1)'"
    >
      <!-- Outer card with soft shadow -->
      <div style="display:flex; align-items:center; justify-content:center;">
        <div
          style="
          background: var(--color-milk);
          border-radius: 1.25rem;
          padding: 1rem;
          box-shadow: 0 18px 30px rgba(0,0,0,0.08);
          display: inline-flex;
          align-items: center;
          justify-content: center;
        "
        >
          <!-- Inner framed panel -->
          <div
            style="
            width: clamp(180px, 28vw, 260px);
            background: #e6d9ca;
            border-radius: 0.9rem;
            border: 6px solid var(--color-coffee);
            padding: 0.6rem;
            box-sizing: border-box;
            display: flex;
            align-items: center;
            justify-content: center;
          "
          >
            <img
              src="/img/milkee-logo.png"
              alt="Milkee Logo"
              style="
                object-fit: contain;
                width: 100%;
                height: auto;
                display: block;
                border-radius: 0.5rem;
              "
            />
          </div>
        </div>
      </div>
    </a>

    <h1
      style="
      font-size: 3rem;
      font-weight: 900;
      color: var(--color-coffee-dark);
      margin-bottom: 1rem;
      letter-spacing: -0.02em;
    "
    >
      Milkee
    </h1>

    <p
      style="
      font-size: 1.25rem;
      color: var(--color-coffee-light);
      max-width: 42rem;
      margin-bottom: 2rem;
      line-height: 1.8;
    "
    >
      A delightful build tool for CoffeeScript.<br />
      Simple, fast, and creamy smooth.
    </p>

    <MilkeeStats client:load />

    <InstallBox client:load />

    <div
      style="
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    "
    >
      <a href="/docs" class="btn-primary"> Get Started </a>
      <a href="/plugins" class="btn-secondary"> Find Plugins </a>
    </div>
  </main>
</Layout>
